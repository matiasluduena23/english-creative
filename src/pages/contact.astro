---
import BaseLayout from "../layouts/BaseLayout.astro";
import Form from "../components/Form.astro";

---

<BaseLayout>

    <main class="bg-color">
        <div class="grid">
            <div class="col-1">
                <h2>Contact Me</h2>
                <ul>
                    <li>
                        <figure> 
                            <img src="../assets/location.svg" alt=""> 
                        </figure> 
                         <p>avenida siempre viva 350</p> 
                     </li>
                     <li>
                        <figure> 

                            <img src="../assets/email.svg" alt=""> 
                        </figure> 
                         <p>janelle@gmail.com</p> 
                     </li>
                     <li>
                        <figure> 
                            <img src="../assets/phone.svg" alt=""> 
                        </figure> 
                         <p>351 3114789</p> 
                     </li>
                </ul>
            </div>
            <div class="col-2">
                <h1>Get in Touch</h1>
                <p>I will answer as soon as posible</p>
                <Form />
            </div>   
        </div>
    </main>

</BaseLayout>

<style>
    main {
        min-height: 100vh;
    }

    .grid {
        background-color: #fff;
        display: flex;
        flex-direction: column-reverse;
        text-align: center;
        gap: 3rem;
    }

    .col-1 {
        background-color: var(--soft-blue-clr);
        color:#fff;
        padding: 2rem;
        max-width: 300px;
    }

    .col-1 h2 {
        font-weight: 600;
        margin-bottom: 2rem;
    }

    li {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-block: 1.5rem;
    }
</style>